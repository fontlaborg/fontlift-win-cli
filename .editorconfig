# EditorConfig for fontlift-win-cli
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ source files
[*.{cpp,h,hpp}]
indent_style = space
indent_size = 4
max_line_length = 100

# Batch scripts
[*.{cmd,bat}]
end_of_line = crlf
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Allow trailing spaces for line breaks

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Git files
[.gitignore]
indent_style = space
indent_size = 2
